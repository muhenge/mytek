<div class="container">
   <div class="row d-flex justify-content-center align-items-center h-100 mt-5">
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
      
      <h2 class="text-uppercase text-center mb-5">Edit your profile</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="form-outline mb-4">
          <%= f.text_field :username, autofocus: true, autocomplete: "usename", class:"form-control w-100 form-control-lg", placeholder:"Username" %>
        </div>
        <div class="form-outline mb-4">
           <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class:"form-control w-100 form-control-lg", placeholder:"Firstname" %>
        </div>
        <div class="form-outline mb-4">
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"form-control w-100 form-control-lg", placeholder:"Lastname" %>
        </div>
        <div class="form-outline mb-4">
          <%= f.text_area :bio, autofocus: true, autocomplete: "Bio", class:"form-control w-100 form-control-lg", placeholder:"Bio" %>
        </div>
        <div class="form-outline mb-4">
          <%= f.text_area :about, autofocus: true, autocomplete: "About", class:"form-control w-100 form-control-lg", placeholder:"About" %>
        </div>
         <div class="form-outline mb-4">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control w-100 form-control-lg", placeholder:"Email", :disabled => true %>
        </div>
         
        <div class="form-outline mb-4">
          <%= f.collection_select(:career_id, Career.all, :id, :field, :prompt => 'Select your title', class:"") %>
        </div>
        <div class="d-flex justify-content-center">
                  <%= f.submit "Update your profile", class:"btn btn-colour-1 w-100" %>
        </div>
      <%end%>
    
      <%= form_with url: user_skills_path(current_user), local: true do |f| %>
        <%= f.text_field :name, placeholder:"Add new skills" %><br><br>
                  <%= f.number_field :level, placeholder:"Add skill level", min: 0, max: 100 %><br><br>
                  <%= button_tag( :class => "btn btn-primary w-100") do %>
          <i class="fas fa-plus"></i> Add a skill
        <% end %>
      <%end%>
                <br>
  </div>  
      <div class="mt-5">
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn-colour-danger" %></p>
      </div>
    </div>
    
    </div>
    
</div>

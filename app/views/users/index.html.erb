<div class="container">
    <div class="row">
    <% @users.each do |user| %>
      <% if current_user != user %>
        <div class="col-md-4">
      
            <%=  link_to user_path(user), class:"text-dark" , :action => 'go' do %>
              <div class="card shadow-none" style="width: 18rem;">
                <%= image_tag user_avatar(user), class:"card-img-top", width:"75"%>
              <div class="card-body">
              <h5 class="cardarkd-title text-center">
    
                <%= user.firstname.capitalize %> <%= user.lastname.capitalize %></h5>
                <div class="text-center text-muted" > <%= user.career.field%> </div>
              <p class="card-text py-3">
                <%= user.about.capitalize %>
              </p>
            </div>
          </div>
          <%end%>
    	</div>
      <%end%>
        <%end%>
	</div>
</div>

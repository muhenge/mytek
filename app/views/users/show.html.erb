<div class="container pt-5">
			<div class="row position-sticky top-0 start-0">
				<div class="col-lg-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
              <% if @user == current_user %>
                <%= image_tag user_avatar(current_user), class:"img-responsive rounded-circle border",width:"210"%>
            <% else %>
              <%= image_tag user_avatar(@user), class:"img-responsive rounded-circle border shadow",width:"210"%>
            <% end %>

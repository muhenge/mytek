									<p class="text-secondary mb-1"><%= @user.career.field %></p>
									<span class="text-primary">
									<%= mail_to "#{@user.email}"%>
									</span>
									<div class="my-3"><%=@user.bio%></div>
                        <% if @user == current_user %>
                              <% else %>
                                  <div class="profile-message-btn center-block text-center">
                                      <% if current_user && current_user.following?(@user) %>
                                          <%= render 'unfollow' %>
                                      <% else %>
                                          <%= render 'follow' %>
                                      <% end %>
                                        </div>
                                    <% end %>
								</div>
								<div class="mt-3 text-muted">
									
								</div>
							</div>
							<hr class="my-4">
							<div class="">
							<h5 class="">About Me</h5>
							<p><%= @user.about.capitalize %></p
							</div>
							
							</div>
							<div class="text-muted text-center">
								member since <%= @user.created_at.strftime("%B %Y") %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card">
						<div class="card-body">
						<h5 class="d-flex align-items-center mb-3"><%= @user.username.capitalize %> Skills</h5>
						<%@user_skills.each do |skills|%>
							<p><strong><%= skills.name.capitalize %><strong></p>
						<div class="progress mb-3" style="height: 20px">
							<div class="progress-bar bg-success" role="progressbar" style="width: <%= skills.level %>%;" aria-valuenow="<%= skills.level %>" aria-valuemin="0" aria-valuemax="100"><%= skills.level %>%</div>
